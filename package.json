{
  "name": "matrimonio-sito",
  "description": "Wedding site - static HTML/CSS/JS",
  "private": true,
  "scripts": {
    "lint": "eslint . --ext .js --ignore-pattern functions/",
    "lint:fix": "eslint . --ext .js --ignore-pattern functions/ --fix",
    "format": "prettier --write \"**/*.{js,html,css,json,md}\"",
    "format:check": "prettier --check \"**/*.{js,html,css,json,md}\"",
    "test": "node --test tests/unit/*.test.js",
    "test:e2e": "playwright test",
    "perf:check": "node scripts/perf-check.js",
    "build": "echo \"Static site - no build step\" && exit 0",
    "validate": "npm run format:check && npm run lint"
  },
  "devDependencies": {
    "@playwright/test": "^1.58.2",
    "eslint": "^8.57.0",
    "prettier": "^3.2.0",
    "serve": "^14.2.5"
  }
}
